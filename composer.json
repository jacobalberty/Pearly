{
    "name": "jacobalberty/pearly",
    "description": "Pearly is a lightweight modular php framework to allow you to load multiple Pearly applications with a single installation.",
    "homepage": "https://github.com/jacobalberty/Pearly",
    "license": "MIT",
    "authors": [
        {
            "name": "Jacob Alberty",
            "homepage": "https://github.com/jacobalberty",
            "role": "Developer"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Pearly\\":         "src/Pearly"
        },
        "classmap": [
            "src/Http.php",
            "src/Html.php"
        ],
        "files": [ "src/functions.inc.php"]
    },
    "require": {
        "php": ">=5.5.0",
        "ext-mbstring": "*",
        "ext-intl": "*",
        "psr/log": "^1.0",
        "tureki/phpcc": ">=1.0.5",
        "istom1n/fpdi-tfpdf": "^1.0",
        "psr/http-message": "^1.0",
        "paragonie/random_compat": "^1.1"
    }
}
